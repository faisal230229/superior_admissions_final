<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subjects"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:background="@drawable/home_bg2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/suplogo"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sup_logo" />


    <androidx.recyclerview.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerList"
        android:layout_below="@id/suplogo"
        />

            <Button
                android:id="@+id/generatefeebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerList"
                android:text="Generate Fee Invoice"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>




    </ScrollView>


</RelativeLayout>